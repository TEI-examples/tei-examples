                    <history>
                        <origin>
                            <origPlace type="location">
                                <placeName type="modern" ref="cic-geo:mieu-thang-gu">Miếu Thằng Gù</placeName>
                                <!-- Latitude: 15°46’32.9”	Longitude: 108°02’43.1” -->
