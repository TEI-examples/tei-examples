                  <rdg resp="Schweyer">1900</rdg>
               </app>
               <app loc="4">
                  <lem>ni</lem>
                  <rdg resp="Schweyer">di</rdg>
               </app>
               <!-- <app loc="5">
                  <lem>lov</lem>
                  <note>this word also occurs in <ref target="C0007.xml">C. 7</ref>.</note>
               </app>
               -->
