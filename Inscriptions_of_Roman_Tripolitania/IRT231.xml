         <div type="edition" xml:lang="la" xml:space="preserve"><head xml:lang="en">Text</head><ab>
               <lb n="1"/>
               <persName type="divine"><name nymRef="Liber">Liber</name> 
                  <w lemma="pater">Pater</w></persName> 
               <w lemma="sancio">s<supplied reason="lost">a</supplied>nctissime</w>
