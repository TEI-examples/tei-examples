               <gap reason="lost" quantity="8" unit="character" precision="low"/><w part="I">ugis</w>
               <lb n="5"/>
               <w lemma="et">et</w> 
               <w lemma="hic">hi<supplied reason="lost">c</supplied></w>
               <gap reason="lost" quantity="4" unit="character" precision="low"/> 
